{
  "hosting": {
    "public": ".next/standalone",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "cleanUrls": true,
    "trailingSlash": false,
    "rewrites": [
      {
        "source": "**",
        "function": "nextjsServer"
      }
    ]
  },
  "functions": {
    "source": ".",
    "codebase": "default",
    "runtime": "nodejs18"
  }
}
